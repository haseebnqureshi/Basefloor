# Google Cloud Credentials
# Convert your credentials file to base64:
# Mac/Linux: base64 -i google-credentials.json
# Windows: [Convert]::ToBase64String([System.IO.File]::ReadAllBytes("google-credentials.json"))
GOOGLE_CREDENTIALS_BASE64=your_base64_encoded_credentials_here

# Alternative method (not recommended for production)
# GOOGLE_CREDENTIALS_JSON={"type": "service_account", ...}

# Development only (not recommended for production)
# GOOGLE_CREDENTIALS_PATH=./path/to/credentials.json 